.moive{
  width: 100%;
  display: flex;
  flex-flow: row;
  padding: 10px;
  border-bottom: 1rpx solid #ccc;
  justify-content: center;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
}
/* 一部电影图片 */
.moive-img{
  width: 200rpx;
  height: 300rpx;
  border: 1rpx solid #ccc;
  margin-right: 40rpx;
  box-shadow: 0.3px 0.3px 5px 1px rgb(112, 112, 112);
}
/* 一部电影介绍 */
.moive-info{
 flex: 1;  /* 将右侧的区域分配给info介绍 */
 font-size:28rpx;
 line-height: 1.7;
}
.moive-title{
  color:#666;
  font-size:40rpx;
  font-weight: bolder;
}
/* 一部电影评分 */
.moive-score{
  color:#faaf00;
}
/* 一部电影详情按钮 */
.moive-comment{
  width: 200rpx;
  height:70rpx;
  background:#e54847;
  color:#fff;
  font-size:14px;
  margin-top: 20rpx;
  border-radius:10rpx;
  margin-left: 0rpx;
 
}

