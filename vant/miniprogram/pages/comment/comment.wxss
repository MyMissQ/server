
/* 背景图片 */
.detail-container{
  height:400rpx;
  filter: blur(20rpx);
  opacity: .4;
 
}
/* 遮罩层 */
.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
/*电影详情列表*/
.detail-info{
  display: flex;

  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height: 400rpx;
  padding: 20rpx;
}
.detail-img{
  width:280rpx;
  height: 90%;
  margin-right:24rpx;/*右边文字间距*/
}
.detail{
  flex-grow:1;/*剩余空间1等分*/
  line-height:80rpx;
}
.detail view{
  color:#fff;
  font-size:28rpx;
}
.detail .detail-sc{
  color:#fc0;
  font-size:36rpx;
  font-weight: 500;
}
.desc{
  padding:20rpx;
  font-size:24rpx;
  color:#555;
}
.corse{
  width:100%;
  display:flex;
  align-items: center;
}
.corse button{
  width: 180rpx;
  background: green;
  font-size: 30rpx;
  color:#fff;
  height: 50rpx;
  line-height: 50rpx;
}
.van-button--normal {
 width: 100%;
}
.comment-img{
  width: 50rpx;
 height: 50rpx;
 display: inline-block;
}